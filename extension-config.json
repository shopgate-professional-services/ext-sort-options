{
  "version": "1.0.1-rc.1",
  "id": "@shopgate-project/sort-options",
  "configuration": {
    "sortOptions": {
      "type": "admin",
      "destination": "both",
      "default": null,
      "params": {
        "type": "json" ,
        "label": "Map for sort options"
      }
    }
  },
  "components": [
    {
      "id": "FilterSortOptions",
      "type": "portals",
      "target": ["filter.sort-options"],
      "path": "frontend/portals/FilterSortOptions"
    }
  ],
  "steps": [
    {
      "path": "extension/normalizeSort.js",
      "hooks": [
        "shopgate.catalog.getProductsByFilter:before",
        "shopgate.catalog.getProductsBySearchPhrase:before",
        "shopgate.catalog.getProductsBySearchPhraseAndFilter:before"
      ],
      "input": [{ "key": "sort" }],
      "output": [{ "key": "sort" }]
    }
  ]
}
